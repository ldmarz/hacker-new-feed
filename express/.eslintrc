{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel"
  ],
  "rules": {
    "key-spacing": 0,
    "max-len": [
      2,
      120,
      2
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}